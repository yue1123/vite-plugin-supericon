{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "rootDir": "./",
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/node/icon.js"],
  "exclude": ["dist/**/*", "node_modules", "test/**/*", "demo/**/*"]
}
